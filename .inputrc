# Up and down arrows search through the history for the characters before the cursor
"\e[A": history-search-backward
"\e[B": history-search-forward

# Alt-Delete deletes up to the end of the current word
"\e[3;3~": kill-word

# Delete for wonky terminals
"\e[3~": delete-char

# Ctrl/Alt arrow keys
"\e[1;5D": backward-word
"\e[1;3D": backward-word
"\e[1;5C": forward-word
"\e[1;3C": forward-word

# Escape keys
"\e[5D": backward-word
"\e\e[D": backward-word
"\e[5C": forward-word
"\e\e[C": forward-word

# Flip through autocompletion matches with Shift-Tab
"\e[Z": menu-complete

set match-hidden-files off
set page-completions off
set completion-query-items 350
set show-all-if-ambiguous on

# Use visual bell instead of sound
set bell-style visible

# Show extra information when completing
set visible-stats on

# Auto-complete files with the wrong case
set completion-ignore-case on
